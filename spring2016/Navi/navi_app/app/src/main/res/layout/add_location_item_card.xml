<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="383dp"
    android:layout_height="wrap_content"
    android:background="@color/lightGray"
    android:layout_marginEnd="148dp"
    android:layout_alignParentTop="true"
    android:visibility="invisible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a location item"
        android:id="@+id/addLocCardHeader"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:textColor="@color/darkGray"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textFieldLocationItem"
        android:hint="Name item ..."
        android:background="@color/white"
        android:layout_below="@+id/addLocCardHeader"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:imeOptions="actionDone"
        android:singleLine="true"/>

    <Spinner
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/filterSpinner"
        android:layout_marginLeft="20dp"
        android:spinnerMode="dialog"
        android:layout_below="@+id/textFieldLocationItem" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Cancel"
        android:textColor="@color/darkGray"
        android:id="@+id/cancelButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Done"
        android:textColor="@color/darkGray"
        android:id="@+id/doneButton"
        android:layout_marginStart="101dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/filterSpinner"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp" />

</RelativeLayout>



