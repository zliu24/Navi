<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:labelFor="@string/app_name"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/spinner_title"
        android:textSize="15dp"
        android:id="@+id/selectADFtext" />

    <Spinner
        android:id="@+id/selectAdf"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize="15sp"/>
    <Button
        android:id="@+id/start"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/start_config"
        android:textSize="15sp" />

    <Button
        android:id="@+id/manageADF"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/manage_adfs"
        android:textSize="15sp" />

</LinearLayout>