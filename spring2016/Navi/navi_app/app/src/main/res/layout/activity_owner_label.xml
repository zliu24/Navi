<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:labelFor="@string/app_name"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="4">

    <RelativeLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="41dp"
            android:layout_height="42dp"
            android:id="@+id/logo"
            android:src="@drawable/pink_navi_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Setup locations in your indoor enviroment"
            android:textSize="25dp"
            android:id="@+id/header_text"
            android:layout_alignTop="@+id/logo"
            android:layout_centerHorizontal="true"
            android:textColor="@color/app_color" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/progress_bar"
            android:src="@drawable/owner_step3_progress"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/logo" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="bottom">

        <ImageView
            android:layout_width="540dp"
            android:layout_height="515dp"
            android:id="@+id/ownerMap"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp" />

        <RelativeLayout
            android:id="@+id/card"
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:background="@color/lightGray"
            android:layout_marginEnd="148dp"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a location item"
                android:id="@+id/addLocCardHeader"
                android:layout_alignParentTop="true"
                android:textSize="20dp"
                android:textColor="@color/darkGray"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/textFieldLocationItem"
                android:hint="Name item ..."
                android:background="@color/white"
                android:layout_below="@+id/addLocCardHeader"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:imeOptions="actionDone"
                android:singleLine="true"/>

            <Spinner
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/filterSpinner"
                android:layout_marginLeft="20dp"
                android:spinnerMode="dialog"
                android:layout_below="@+id/textFieldLocationItem" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Cancel"
                android:textColor="@color/darkGray"
                android:id="@+id/cancelButton"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Done"
                android:textColor="@color/darkGray"
                android:id="@+id/doneButton"
                android:layout_marginStart="101dp"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/filterSpinner"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp">

            <Button
                android:id="@+id/next"
                android:background="@drawable/custom_button"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="128dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>